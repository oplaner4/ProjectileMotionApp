@using ProjectileMotionWeb.Models;
@using ProjectileMotionWeb.Helpers;
@model _FormResultUnitGroupModel

<div class="form-group">
    @Model.LabelForResultUnit
    <select id="@Model.NameForResultUnit" name="@Model.NameForResultUnit" class="form-control" style="width:auto">
        @foreach (string unitName in new UnitsReflectionHelper(Model.UnitClassType).GetListUnitsNames())
        {
            <option value="@unitName" @(unitName == Model.ResultUnitName ? "selected" : string.Empty)>@unitName</option>
        }
    </select>
</div>